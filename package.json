{
  "name": "queuebot",
  "version": "1.0.0",
  "description": "Adjusts merge queue numbers for you!",
  "respository": "git@github.com:KITSTABTheoBreuerWeil/tab-queuebot.git",
  "author": "Theo Breuer-Weil <theo.breuer-weil@theappbusiness.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./build/index.js",
    "start-dev": "$(npm bin)/nodemon ./build/index.js",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint": "tslint -c tslint.json src/**/*.ts src/**/**/*.ts",
    "unit": "jest"
  },
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/node": "10.9.4",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "tslib": "^1.9.3",
    "typescript": "^3.0.3",
    "yaml": "^1.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/yaml": "^1.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "testdouble": "^3.8.1",
    "testdouble-jest": "^2.0.0",
    "ts-jest": "^23.10.2",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
